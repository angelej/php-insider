{
    "name": "angelej/php-insider",
    "authors": [
        {
            "name": "Jeremy Angele",
            "email": "jeremy.angele@proton.me"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "nikic/php-parser": "^4.16",
        "symfony/console": "^6.3",
        "nunomaduro/termwind": "^1.15"
    },
    "require-dev": {
        "pestphp/pest": "^2.9",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Angelej\\PhpInsider\\": "src/"
        }
    },
    "bin": [
        "bin/insider"
    ],
    "scripts": {
        "test": "./vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
